{
  "name": "easypress",
  "version": "0.0.1",
  "description": "easier SSG framework",
  "scripts": {
    "build:comment": "echo 多入口打包，tsup不打包node_modules，--shims兼容esm与cjs的全局变量如__dirname，--no-splitting兼容shims，让shims不分割为chunk影响__dirname等路径，npm run build --watch无法接受watch参数，pnpm又固定了包管理器，所以复制build命令到dev",
    "build": "tsup ./src/node/cli.ts ./src/index.ts --shims --no-splitting --format cjs,esm --dts  --outDir=./lib",
    "dev": "cross-env NODE_ENV=development tsup ./src/node/cli.ts ./src/index.ts --shims --no-splitting --format cjs,esm --dts  --outDir=./lib --watch",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
  },
  "type": "module",
  "main": "./lib/index.cjs",
  "module": "./lib/index.js",
  "types": "./lib/index.d.cts",
  "bin": "./bin/easypress.js",
  "files": [
    "./lib",
    "./bin"
  ],
  "dependencies": {
    "@mdx-js/rollup": "^3.0.1",
    "@vitejs/plugin-react": "^4.2.1",
    "acorn": "^8.11.3",
    "commander": "^11.1.0",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "github-slugger": "^2.0.0",
    "react-router-dom": "^6.22.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-pretty-code": "^0.13.0",
    "rehype-slug": "^6.0.0",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.0",
    "remark-mdx-frontmatter": "^4.0.0",
    "shiki": "^1.1.2",
    "unist-util-visit": "^5.0.0",
    "vite": "^5.0.8",
    "vite-tsconfig-paths": "^4.3.1"
  },
  "devDependencies": {
    "@types/estree": "^1.0.5",
    "@types/fs-extra": "^11.0.4",
    "@types/hast": "^3.0.4",
    "@types/mdast": "^4.0.3",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "cross-env": "^7.0.3",
    "mdast-util-mdxjs-esm": "^2.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^4.12.0",
    "tsup": "^8.0.1",
    "unified": "^11.0.4"
  },
  "peerDependencies": {
    "react": ">=18.0.0 <19.0.0",
    "react-dom": ">=18.0.0 <19.0.0"
  }
}
